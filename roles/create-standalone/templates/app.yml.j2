apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ app_name }}
  namespace: {{ gitops_namespace }}
  finalizers:
    - resources-finalizer.argocd.argoproj.io
  labels:
    app: {{ app_name }}
spec:
  project: default
  source:
    path: 'broker_template/amq-broker-rhel8'
    repoURL: {{ gitops_repo_url }}
    targetRevision: {{ git_branch }}
    {# helm:
      parameters:
{% if override_values is defined %}
{% for override_value in override_values %}
        - name: {{ override_value.name }}
          values: '{{ override_value.value }}'
{% endfor %}
{% endif %} #}
  {# ignoreDifferences:
    - group: '*'
      kind: "Project"
      jsonPointers:
      - /metadata/annotations
      - /metadata/labels
    - group: '*'
      kind: '*'
      jqPathExpressions:
      - .metadata | select(.name == "etcd") #}
  syncPolicy:
    preserveResourcesOnDeletion: true
    automated:
      selfHeal: true
    syncOptions:
      - RespectIgnoreDifferences=true
      - CreateNamespace=false
  destination:
    server: {{ gitops_server }}
    namespace: {{ gitops_namespace }}